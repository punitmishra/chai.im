# Chai.im Environment Variables
# Copy this file to .env and fill in your values

# ===================================
# Server Configuration
# ===================================

# PostgreSQL connection string
DATABASE_URL=postgres://postgres:password@localhost:5432/chai

# Server port (default: 8080)
PORT=8080

# JWT secret for authentication tokens
# Generate with: openssl rand -base64 32
JWT_SECRET=your-secret-key-here

# WebAuthn configuration
RP_ID=localhost
RP_ORIGIN=http://localhost:3000

# Logging level (trace, debug, info, warn, error)
RUST_LOG=info

# ===================================
# Web Client Configuration
# ===================================

# WebSocket server URL
NEXT_PUBLIC_WS_URL=ws://localhost:8080/ws

# ===================================
# Production Overrides
# ===================================

# Uncomment and modify for production:
# DATABASE_URL=postgres://user:pass@your-db-host:5432/chai
# RP_ID=chai.im
# RP_ORIGIN=https://chai.im
# NEXT_PUBLIC_WS_URL=wss://api.chai.im/ws
