{
  "name": "chai.im",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "build:wasm": "cd crates/chai-crypto && wasm-pack build --target web --features wasm --out-dir ../../apps/web/wasm",
    "lint": "turbo lint",
    "test": "turbo test",
    "clean": "turbo clean && rm -rf node_modules",
    "server:dev": "cargo run -p chai-server",
    "server:build": "cargo build -p chai-server --release",
    "cli:dev": "cargo run -p chai-cli",
    "cli:build": "cargo build -p chai-cli --release"
  },
  "devDependencies": {
    "turbo": "^2.7.2"
  }
}
